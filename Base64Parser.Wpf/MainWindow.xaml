<Window x:Class="Base64Parser.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Base64Parser.Wpf"
        mc:Ignorable="d"
        Title="Base64Parser" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="FileName" HorizontalAlignment="Left" Height="44" Margin="78,41,0,0" TextWrapping="Wrap" Text="文件地址" VerticalAlignment="Top" Width="288" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="BrowseFile" Content="选择文件" HorizontalAlignment="Left" Margin="385,52,0,0" VerticalAlignment="Top" Width="75" Click="PickFile"/>
        <TextBox x:Name="ParsedText" HorizontalAlignment="Left" Margin="78,107,0,0" TextWrapping="Wrap" Text="解析后的base64字符串" VerticalAlignment="Top" Height="165" Width="382" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
