<Window x:Class="EscapeText.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscapeText.Wpf"
        mc:Ignorable="d"
        Title="转义字符" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="RawTextBox" HorizontalAlignment="Left" Height="92" Margin="53,33,0,0" TextWrapping="Wrap" AcceptsReturn="True" Text="原数据" VerticalAlignment="Top" Width="319"/>
        <TextBox x:Name="EscapedTextBox" HorizontalAlignment="Left" Height="106" Margin="53,158,0,0" TextWrapping="Wrap" AcceptsReturn="True" Text="转义后的数据" VerticalAlignment="Top" Width="319"/>
        <Button x:Name="SubmitBtn" Content="转义" HorizontalAlignment="Left" Margin="409,33,0,0" VerticalAlignment="Top" Width="75" Click="SubmitBtn_Click"/>

    </Grid>
</Window>
